<rdf:RDF xmlns="http://ns.inria.fr/edelweiss/2011/rule#"
xmlns:rdf='http://www.w3.org/1999/02/22-rdf-syntax-ns#'>
  <rule><body><![CDATA[
    # generates the body of the XML message
    # starting point, called once.
    PREFIX note: <http://example.com/note/> 
    PREFIX ex: <http://example.com/> 
    PREFIX mail:  <http://example.com/mail#>
    PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#> 
    PREFIX xsd: <http://www.w3.org/2001/XMLSchema#> 
    PREFIX owl: <http://www.w3.org/2002/07/owl#> 
    PREFIX st: <http://ns.inria.fr/sparql-template/>
    TEMPLATE st:start {
     "<?xml version='1.0' encoding='UTF-8'?> \n"
     "<notes>\n"
     st:call-template(<https://w3id.org/rdfp/input/xml/loweringRule#printNotes>)
     "</notes>"
    }
    WHERE { }
  ]]></body></rule>
  <rule><body><![CDATA[
    # generates s:note elements
    PREFIX note: <http://example.com/note/> 
    PREFIX ex: <http://example.com/> 
    PREFIX mail:  <http://example.com/mail#>
    PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#> 
    PREFIX xsd: <http://www.w3.org/2001/XMLSchema#> 
    PREFIX owl: <http://www.w3.org/2002/07/owl#> 
    PREFIX st: <http://ns.inria.fr/sparql-template/>
    TEMPLATE <https://w3id.org/rdfp/input/xml/loweringRule#printNotes> {
    "  <note id='" str(?id) "' day='" str(?day) "' month='" str(?month) "' year='" str(?year) "'>\n"
    "    <to>" str(?to) "</to>\n"
    "    <from>" str(?from) "</from>\n"
    "    <heading>" str(?heading) "</heading>\n"
    "    <body>" str(?body) "</body>\n"
    "  </note>\n"
    }
    WHERE { 
        ?note a mail:note ;
          mail:to ?to ;
          mail:from ?from ;
          mail:heading ?heading;
          mail:body ?body ;
          mail:when [ a ex:DateTime ; ex:day ?day ; ex:month ?month ; ex:year ?year ] .
      BIND( STRAFTER(STR(?note), "http://example.com/note/") AS ?id )
  }
  ]]></body></rule>
</rdf:RDF>